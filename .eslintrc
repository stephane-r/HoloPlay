{
    "extends": [
        "airbnb-base",
        "prettier",
        "prettier/react",
        "prettier/standard",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "experimentalObjectRestSpread": true,
            "experimentalDecorators": true,
            "impliedStrict": true,
            "classes": true
        }
    },
    "env": {
        "browser": true,
        "node": true,
        "jquery": true
    },
    "rules": {
        "react/jsx-first-prop-new-line": [1, "multiline"],
        "react/jsx-max-props-per-line": [
            1,
            {
                "maximum": 2
            }
        ],
        "react/react-in-jsx-scope": "off",
        "indent": [
            2,
            2,
            {
                "SwitchCase": 1
            }
        ],
        "quotes": [2, "single"],
        "linebreak-style": [2, "unix"],
        "semi": [2, "always"],
        "no-console": [0],
        "no-loop-func": [0],
        "new-cap": [0],
        "no-trailing-spaces": [0],
        "no-param-reassign": [0],
        "func-names": [0],
        "comma-dangle": [0],
        "no-unused-expressions": [0],
        "block-scoped-var": [0],
        "react/prop-types": [0],
        "jsx-quotes": ["error", "prefer-double"],
        "object-curly-spacing": ["error", "always"]
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.5.0"
        }
    },
    "plugins": ["react", "prettier"]
}
